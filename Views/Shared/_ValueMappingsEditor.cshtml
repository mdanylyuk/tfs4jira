    function init(){
        jQuery.ajax({
            type: 'POST',
            url: '@Url.Action("GetAvailableFieldValues", "Tfs")?_=' + new Date().getTime(),
            data: 'guid=@Model.Guid&mappingid=@mapping.Id',
            success: function (data) {
                if (data.success) {
